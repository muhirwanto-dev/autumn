@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider FullWidth="true"
                   MaxWidth="MaxWidth.ExtraSmall"
                   CloseButton="true"
                   BackdropClick="false"
                   NoHeader="true"
                   Position="DialogPosition.Center"
                   CloseOnEscapeKey="true" />

<MudLayout>
    <MudAppBar Class="py-5 bg-white gap-5" Color="Color.Transparent" Dense="true" Elevation="0" Fixed="true">
        <MudSpacer />
        <MudButton Variant="Variant.Filled" Class="rounded-pill" Color="Color.Tertiary" Href="#container-my-projects">See my work!</MudButton>
    </MudAppBar>

    <MudMainContent Class="mt-5">
        @Body
    </MudMainContent>
</MudLayout>