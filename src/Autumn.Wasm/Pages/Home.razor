@page "/"
@using Autumn.Wasm.ViewModel
@using Blazing.Mvvm.Components

@inherits MvvmComponentBase<HomeViewModel>

<PageTitle>Home</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large">
    <MudStack AlignItems="AlignItems.Center">
        <MudText Typo="Typo.h3" Class="fw-bold mt-5" Align="Align.Center" Color="Color.Primary">@ViewModel!.Profile?.Role</MudText>
        <MudText Style="margin-left: 150px; margin-right: 150px;" Align="Align.Center">@ViewModel!.Profile?.RoleDescription</MudText>
        <MudImage Src="images/home_banner.png" Alt=".NET Developer banner" Height="360" Class="rounded-lg ma-4" />
    </MudStack>
</MudContainer>

<MudContainer Width="100%" Square="true" Class="bg-primary" Style="padding: 150px; padding-bottom: 250px;">
    <MudText Align="Align.Center" Typo="Typo.h4" Class="fw-bold my-5 text-white">Hi, I'm @ViewModel!.Profile?.FirstName. Nice to meet you</MudText>

    @if (ViewModel!.Profile?.AboutMe is string aboutMe)
    {
        <MudText Align="Align.Center" Class="text-white">@aboutMe</MudText>
    }
</MudContainer>

